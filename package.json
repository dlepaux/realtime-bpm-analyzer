{
  "name": "realtime-bpm-analyzer",
  "version": "2.0.2",
  "description": "Library to analyze BPM (Tempo) of a song in realtime on your browser",
  "author": {
    "name": "David Lepaux",
    "email": "d.lepaux@gmail.com",
    "url": "https://github.com/dlepaux"
  },
  "keywords": [
    "webaudioapi",
    "audiobuffer",
    "audio",
    "realtime",
    "tempo",
    "bpm",
    "beats",
    "minutes",
    "analyzer"
  ],
  "type": "module",
  "license": "MIT",
  "main": "./lib/realtime-bpn-analyzer.js",
  "scripts": {
    "build": "vue-cli-service build",
    "serve": "vue-cli-service serve",
    "coverage": "codecov",
    "debug": "set LOGGY_STACKS=true && brunch w",
    "doc": "rm -Rf ./jsdoc && jsdoc -c ./.jsdoc.json ./readme.md",
    "postinstall": "npx husky install",
    "release": "standard-version",
    "release:patch": "standard-version --release-as patch",
    "release:minor": "standard-version --release-as minor",
    "release:major": "standard-version --release-as major",
    "test": "NODE_ENV=test mocha",
    "test:report": "c8 --reporter=html --reporter=text --reporter=lcov npm test"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dlepaux/realtime-bpm-analyzer"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@vue/cli-service": "~4.5.0",
    "@vue/compiler-sfc": "^3.0.0",
    "c8": "^7.7.1",
    "chai": "^4.3.4",
    "clean-jsdoc-theme": "^3.2.8",
    "codecov": "^3.8.3",
    "docdash": "^1.2.0",
    "husky": "^7.0.2",
    "jsdoc": "^3.6.7",
    "mocha": "^8.3.2",
    "raf": "^3.4.1",
    "standard-version": "^9.3.1",
    "vue": "^3.2.19",
    "vue-router": "^4.0.11",
    "wav-decoder": "^1.3.0",
    "web-audio-engine": "^0.13.4",
    "xo": "^0.45.0"
  },
  "xo": {
    "space": 2,
    "semicolon": true,
    "globals": [
      "process",
      "document",
      "navigator",
      "window"
    ],
    "rules": {
      "unicorn/no-array-reduce": "off",
      "node/prefer-global/process": 0,
      "unicorn/numeric-separators-style": "off",
      "import/no-anonymous-default-export": "off"
    }
  },
  "lint-staged": {
    "**/*": "xo --fix"
  }
}
