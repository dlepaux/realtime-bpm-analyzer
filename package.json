{
  "name": "realtime-bpm-analyzer",
  "version": "3.1.1",
  "description": "This dependency free library can analyze the BPM (Tempo) of an audio/video node or any stream in realtime on your browser",
  "author": {
    "name": "David Lepaux",
    "email": "d.lepaux@gmail.com",
    "url": "https://github.com/dlepaux"
  },
  "keywords": [
    "webaudioapi",
    "audiobuffer",
    "audio",
    "stream",
    "microphone",
    "realtime",
    "no-dependency",
    "tempo",
    "bpm",
    "beats",
    "analyzer"
  ],
  "license": "MIT",
  "main": "./dist/index.js",
  "module": "./dist/index.esm.js",
  "scripts": {
    "build": "npm run build:index && npm run build:index:esm && npm run build:realtime:processor && npm run build:types",
    "build:index": "esbuild src/index.ts --bundle --sourcemap --outfile=dist/index.js",
    "build:index:esm": "esbuild src/index.ts --bundle --sourcemap --platform=neutral --outfile=dist/index.esm.js",
    "build:docs:sitemap": "ts-node --esm --skipProject ./deploy/sitemap-generator.ts",
    "build:docs:seo": "ts-node --esm --skipProject ./deploy/seo-injector.ts",
    "build:docs:assets": "cp -r ./deploy/public/* ./docs/",
    "build:favicons": "npm run build:favicons:images && npm run build:favicons:inject",
    "build:favicons:images": "real-favicon generate .real-favicon.json .real-favicon-data.json docs/favicon",
    "build:favicons:inject": "npm run build:favicons:inject:root && npm run build:favicons:inject:classes && npm run build:favicons:inject:functions && npm run build:favicons:inject:types",
    "build:favicons:inject:classes": "real-favicon inject .real-favicon-data.json docs/classes docs/classes/*.html",
    "build:favicons:inject:functions": "real-favicon inject .real-favicon-data.json docs/functions docs/functions/*.html",
    "build:favicons:inject:types": "real-favicon inject .real-favicon-data.json docs/types docs/types/*.html",
    "build:favicons:inject:root": "real-favicon inject .real-favicon-data.json docs docs/*.html",
    "build:realtime:processor": "esbuild processor/realtime-bpm-processor.ts --bundle --sourcemap --outfile=dist/realtime-bpm-processor.js",
    "build:typedoc": "typedoc ./src",
    "build:types": "npm run build:types:index && npm run build:types:realtime:processor",
    "build:types:index": "tsc -h && tsc src/index.ts --emitDeclarationOnly --outdir dist --declaration",
    "build:types:realtime:processor": "tsc processor/realtime-bpm-processor.ts --emitDeclarationOnly --target es6 --declaration --outfile dist/realtime-bpm-processor.d.ts",
    "coverage": "codecov -f coverage/lcov.info",
    "dev": "rm -Rf dist && npm run build && rm -Rf ../allegro/.next/ && rm -Rf ../allegro/node_modules/realtime-bpm-analyzer/dist/ && mkdir ../allegro/node_modules/realtime-bpm-analyzer/dist/ && cp ./dist/* ../allegro/node_modules/realtime-bpm-analyzer/dist/",
    "lint": "xo --fix",
    "doc": "rm -Rf docs && npm run build:typedoc && npm run build:favicons && npm run build:docs:sitemap && npm run build:docs:seo && npm run build:docs:assets",
    "deploy": "rm -Rf docs && npm run doc && gh-pages -d docs -b gh-pages",
    "prepare": "husky install",
    "release": "standard-version",
    "release:patch": "standard-version --release-as patch",
    "release:minor": "standard-version --release-as minor",
    "release:major": "standard-version --release-as major",
    "test": "NODE_ENV=test karma start"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dlepaux/realtime-bpm-analyzer"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "@microsoft/tsdoc": "^0.14.2",
    "@tsconfig/recommended": "^1.0.1",
    "@types/chai": "^4.3.0",
    "@types/express": "^4.17.17",
    "@types/mocha": "^9.1.0",
    "chai": "^4.3.4",
    "cli-real-favicon": "0.0.8",
    "codecov": "^3.8.3",
    "esbuild": "^0.14.21",
    "gh-pages": "^4.0.0",
    "husky": "^7.0.2",
    "karma": "^6.4.1",
    "karma-chrome-launcher": "^3.1.1",
    "karma-coverage-istanbul-reporter": "^3.0.3",
    "karma-esbuild": "^2.2.5",
    "karma-mocha": "^2.0.1",
    "karma-typescript": "^5.5.3",
    "mocha": "^9.2.0",
    "puppeteer": "^19.6.3",
    "standard-version": "^9.5.0",
    "typedoc": "^0.23.24",
    "typescript": "^4.7.4",
    "xo": "^0.53.1"
  },
  "xo": {
    "space": 2,
    "semicolon": true,
    "globals": [
      "process",
      "document",
      "navigator",
      "window"
    ],
    "rules": {
      "unicorn/no-array-reduce": "off",
      "node/prefer-global/process": 0,
      "unicorn/numeric-separators-style": "off",
      "import/no-unassigned-import": "off",
      "import/no-anonymous-default-export": "off",
      "import/extensions": "off",
      "no-await-in-loop": "off",
      "@typescript-eslint/triple-slash-reference": "off",
      "unicorn/prefer-top-level-await": "off"
    }
  },
  "lint-staged": {
    "**/*": "xo --fix"
  }
}
