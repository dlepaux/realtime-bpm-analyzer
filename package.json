{
  "name": "realtime-bpm-analyzer",
  "version": "4.0.2",
  "description": "This dependency free library can analyze the BPM (Tempo) of an audio/video node or any stream in realtime on your browser",
  "author": {
    "name": "David Lepaux",
    "email": "d.lepaux@gmail.com",
    "url": "https://github.com/dlepaux"
  },
  "keywords": [
    "webaudioapi",
    "audiobuffer",
    "audio",
    "stream",
    "microphone",
    "realtime",
    "no-dependency",
    "tempo",
    "bpm",
    "beats",
    "analyzer"
  ],
  "license": "Apache-2.0",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.esm.js",
      "require": "./dist/index.js"
    },
    "./processor": {
      "types": "./dist/realtime-bpm-processor.d.ts",
      "default": "./dist/realtime-bpm-processor.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "readme.md",
    "licence.md"
  ],
  "sideEffects": false,
  "workspaces": [
    "examples/*"
  ],
  "scripts": {
    "build": "bash bin/build/library.sh",
    "docs:dev": "cd docs && npm run dev",
    "docs:build": "cd docs && npm run build",
    "docs:preview": "cd docs && npm run preview",
    "examples:install": "npm install --workspaces",
    "examples:build": "npm run build --workspaces --if-present",
    "examples:dev": "cd docs && npm run dev:examples",
    "lint": "xo",
    "lint:fix": "xo --fix",
    "prepare": "husky install",
    "release:patch": "bash bin/release/version.sh patch",
    "release:minor": "bash bin/release/version.sh minor",
    "release:major": "bash bin/release/version.sh major",
    "testing:prepare": "ts-node testing/tools/generate-manifest.ts",
    "testing": "web-dev-server",
    "test": "web-test-runner",
    "test:watch": "web-test-runner --watch",
    "test:unit": "web-test-runner --files 'tests/unit/**/*.test.ts'",
    "test:integration": "web-test-runner --files 'tests/integration/**/*.test.ts'",
    "test:lib": "web-test-runner --files 'tests/lib/**/*.ts'",
    "test:coverage": "web-test-runner --coverage"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dlepaux/realtime-bpm-analyzer"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.5.0",
    "@commitlint/config-conventional": "^18.5.0",
    "@types/chai": "^4.3.11",
    "@types/mocha": "^10.0.6",
    "@web/dev-server": "^0.4.1",
    "@web/dev-server-esbuild": "^1.0.1",
    "@web/test-runner": "^0.18.0",
    "@web/test-runner-puppeteer": "^0.18.0",
    "chai": "^5.0.3",
    "esbuild": "^0.25.0",
    "eslint": "^8.56.0",
    "husky": "^8.0.3",
    "mocha": "^10.2.0",
    "music-metadata": "^7.14.0",
    "standard-version": "^9.5.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "xo": "^0.56.0"
  },
  "xo": {
    "space": 2,
    "semicolon": true,
    "ignores": [
      "examples/**",
      "docs/scripts/**"
    ],
    "globals": [
      "process",
      "document",
      "navigator",
      "window"
    ],
    "rules": {
      "n/prefer-global/process": "off",
      "node/prefer-global/process": 0,
      "no-await-in-loop": "off",
      "jsdoc/tag-lines": "off",
      "import/no-unassigned-import": "off",
      "import/no-anonymous-default-export": "off",
      "import/extensions": "off",
      "unicorn/no-array-reduce": "off",
      "unicorn/numeric-separators-style": "off",
      "unicorn/prefer-top-level-await": "off",
      "unicorn/prefer-add-event-listener": "off",
      "@typescript-eslint/triple-slash-reference": "off",
      "@typescript-eslint/no-loss-of-precision": "off",
      "@typescript-eslint/no-unused-expressions": "off",
      "no-promise-executor-return": "off",
      "@typescript-eslint/no-empty-function": "off",
      "unicorn/prevent-abbreviations": "off"
    }
  },
  "lint-staged": {
    "**/*": "xo --fix"
  }
}
